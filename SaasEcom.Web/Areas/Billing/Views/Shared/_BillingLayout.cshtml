@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Billing" />
    <title>@ViewBag.Title - SAAS Ecom</title>
    @Styles.Render("~/bundles/billing/css")
    @Styles.Render("~/bundles/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class ="navbar-brand">Saas ecom</span>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="@(ViewBag.Section == "dashboard" ? "active" : "")">
                        <a href="@Url.Action("Index", "Dashboard", new { area = "billing" })"><i class="fa fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li class="@(ViewBag.Section == "customers" ? "active" : "")">
                        <a href="@Url.Action("Index", "Customers", new { area = "billing" })"><i class="fa fa-users"></i> Customers</a>
                    </li>
                    <li class="@(ViewBag.Section == "invoices" ? "active" : "")">
                        <a href="@Url.Action("Index", "Invoices", new { area = "billing" })"><i class="fa fa-copy"></i> Invoices</a>
                    </li>
                    <li class="@(ViewBag.Section == "subscription-plans" ? "active" : "")">
                        <a href="@Url.Action("Index", "SubscriptionPlans", new { area = "billing" })"><i class="fa fa-table"></i> Subscription Plans</a>
                    </li>
                    <li class="@(ViewBag.Section == "analytics" ? "active" : "")">
                        <a href="@Url.Action("Index", "Analytics", new { area = "billing" })"><i class="fa fa-bar-chart-o"></i> Analytics</a>
                    </li>
                    <li class="@(ViewBag.Section == "settings" ? "active" : "")">
                        <a href="@Url.Action("Index", "Settings", new { area = "billing" })"><i class="fa fa-gear"></i> Settings</a>
                    </li>
                </ul>

                <!-- Log out -->
                @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()
                    <ul class="nav navbar-nav navbar-right navbar-user">
                        <li class="dropdown user-dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.GetUserName() <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Manage", "Account", new { area = "billing" })"><i class="fa fa-user"></i> Profile</a></li>
                                <li class="divider"></li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-power-off"></i> Log Out</a></li>
                            </ul>
                        </li> 
                    </ul>
                }
            </div><!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/billing/js")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
