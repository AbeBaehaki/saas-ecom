@model IEnumerable<SaasEcom.Data.Models.SubscriptionPlan>

@{
    ViewBag.Title = "Subscription Plans";
    Layout = "~/Areas/Billing/Views/Shared/_BillingLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="title"><i class="fa fa-table"></i> Subscription plans</h1>
        

        @if (Model != null && Model.Any())
        {
            <p>
                <a href="@Url.Action("Create")" class="btn btn-primary">Create new Subscription plan</a>
            </p>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FriendlyId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Interval)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrialPeriodInDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatementDescription)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FriendlyId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Interval)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrialPeriodInDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatementDescription)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-list-alt"></span></a>
                            <a href="@Url.Action("Delete", new {id = item.Id})" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p>You still don't have any subscription plan.</p>
            <p>
                <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">Start creating a subscription plan!</a>
            </p>
        }
    </div>
</div>
