@model SaasEcom.Web.Areas.Dashboard.ViewModels.ChangeSubscriptionViewModel

    @{
        ViewBag.Title = "Subscribe";
        Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    }

    <h3><i class="fa fa-refresh"></i> Change subscription plan</h3>
    <div class="row">
        <div class="container">
            <div class="change-subscription">
                @using (Html.BeginForm("ChangeSubscription", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new {@class = "text-danger"})

                    <p>The payment for the change will be pro-rated. Don't worry about over paying.</p>

                    <ul>
                        <li>Plan 1</li>
                        <li>Plan 2</li>
                        <li>Plan 3</li>
                    </ul>
                }                

            </div>
        </div>
    </div>
