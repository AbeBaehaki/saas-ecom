@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dashboard</title>
    @Styles.Render("~/bundles/dashboard/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/fontawesome")
</head>
<body>
    <div id="wrap">

        <!-- Fixed navbar -->
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <i class="fa fa-dashboard navbar-brand"></i> @Html.ActionLink("Dashboard", "Index", "Home", new { area = "dashboard" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <!-- Log out -->
                    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav navbar-right">

                            <!-- Username drop-down -->
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#"><i class="fa fa-user"></i> @User.Identity.GetUserName() <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="@Url.Action("ChangePassword", "Manage")"><i class="fa fa-asterisk small"></i> Change your password</a>
                                    </li>
                                    <li role="presentation" class="divider"></li>
                                    <li><a href="#"><i class="fa fa-question-circle"></i> Support</a></li>
                                </ul>
                            </li>

                            <!-- Logout -->
                            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-off"></span> Log out</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>

        <!-- Body -->
        <div class="container content">
            @if (TempData.ContainsKey("flash"))
            {
                @Html.Partial("Alert", TempData["flash"]);
            }

            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        <p class="footer container text-muted">
            &copy; @DateTime.Now.Year - Dashboard powered by <a href="https://github.com/pedropaf/saas-ecom">SAAS Ecom</a>.
        </p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/dashboard/js")
    @RenderSection("scripts", required: false)
    
    <!-- Google Analytics -->
    @if (!HttpContext.Current.IsDebuggingEnabled)
    {
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-316069-16', 'saas-ecom.azurewebsites.net');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');
        </script>
    }
</body>
</html>