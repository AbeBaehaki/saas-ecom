@model SaasEcom.Web.Areas.Dashboard.ViewModels.SubscriptionViewModel

<!-- Subscription plan -->
<div class="col-sm-6 col-md-6">
    <div class="well">
        <h4>You are currently on the <span class="text-primary">@Model.Subscription.SubscriptionPlan.Name</span> plan</h4>
        <p>Plan price: <strong>£@Model.Subscription.SubscriptionPlan.Price / @Model.Subscription.SubscriptionPlan.Interval</strong>.</p>
        <p><strong>@Model.Subscription.Status()</strong></p>
        <br />

        <!-- Payment details -->
        @if (Model.CreditCard != null)
        {
            <h4 class="content-title">Payment Details</h4>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Card Type</th>
                        <td>@Model.CreditCard.Type</td>
                    </tr>
                    <tr>
                        <th>Card Number</th>
                        <td>************@Model.CreditCard.Last4 &nbsp;<small>(<a href="@Url.Action("Edit", "Card", new { Id = Model.CreditCard.Id })">change card</a>)</small></td>
                    </tr>
                    <tr>
                        <th>Valid Until</th>
                        <td>@Model.CreditCard.ExpirationMonth/@Model.CreditCard.ExpirationYear</td>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-default" data-toggle="modal" data-target="#cancelModal"><i class="fa fa-times-circle"></i> Cancel subscription</button>
        }
        else
        {
            <br />
            <hr />
            <h5><i class="fa fa-arrow-circle-right"></i> Please <strong>register a credit card</strong> to pay for your subscription.</h5>
            <a href="@Url.Action("Create", "Card")" class="btn btn-primary">Add Credit Card</a>
            <button class="btn btn-default" data-toggle="modal" data-target="#cancelModal"><i class="fa fa-times-circle"></i> Cancel subscription</button>
        }
    </div> <!-- /.well -->
</div> <!-- /.col -->

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Cancel subscription?</h4>
            </div>
            <div class="modal-body">
                <p>This action can not be undone and <strong>you will lose all your data</strong>. Do you want to continue?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Back</button>
                <a href="@Url.Action("CancelSubscription", "Manage", new { id = Model.Subscription.Id })" class="btn btn-danger">Cancel subscription</a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- Account usage -->
<div class="col-sm-6 col-md-6">
    <div class="portlet portlet-boxed">
        <div class="portlet-body">
            <h4 class="content-title">Account Usage</h4>
            <div class="progress-stat">
                <div class="progress-stat-label">
                    HDD Space
                </div>
                <div class="progress-stat-value">
                    1.7/10 GB
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100" style="width: 17%">
                        <span class="sr-only">17 HDD Space Used</span>
                    </div>
                </div> <!-- /.progress -->
            </div> <!-- /.progress-stat -->

            <div class="progress-stat">
                <div class="progress-stat-label">
                    Users
                </div>
                <div class="progress-stat-value">
                    5/10
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
                        <span class="sr-only">50% Users Used</span>
                    </div>
                </div> <!-- /.progress -->

            </div> <!-- /.progress-stat -->

            <div class="progress-stat">
                <div class="progress-stat-label">
                    Projects
                </div>
                <div class="progress-stat-value">
                    9/10
                </div>
                <div class="progress progress-sm">
                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%">
                        <span class="sr-only">90% Projects Used</span>
                    </div>
                </div> <!-- /.progress -->
            </div> <!-- /.progress-stat -->
        </div> <!-- /.portlet-body -->
    </div> <!-- /.portlet -->
</div>